<%= form_for @post do |p| %>
  <%= p.label :title, "Title" %>
  <%= p.text_field :title, :placeholder => "Post Title" %>
  <%= p.label :body, "Body" %>
  <%= p.text_area :body, :placeholder => "Post Body" %>
  <%= p.label :tags, "Tags" %>
  <%= p.text_field :tags, :value => nil, :value => (@post.tags.map { |t| p t.tag }.join(", ") ) %>
  <%= p.button "Edit Post" %>
<% end %>