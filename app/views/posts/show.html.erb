<% if @post %>
  <div class="post">
  <h3 class="post_title"><%= @post.title %></h3>
  <p class="post_time">Posted on: <%= @post.posted_on %></p>
  <p><%= @post.body.html_safe %></p>
  <p><%= link_to "Edit", edit_post_path(@post.id) if current_user %></p>
  <% if @post.tags.count > 0 %>
    <ul class="tags">
      <% @post.tags.each do |tag| %>
        <li><%= link_to tag.tag, tag_path(tag) %></li>
      <% end %>
    </ul>
  <% end %>
  </div>
<% else %>
  <h2>Error</h2>
<% end %>

<div class="pagination"><%= link_to "Back to Blog Posts", posts_path %></div>