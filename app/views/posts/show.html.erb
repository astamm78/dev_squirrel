<% if @post %>
  <h2 id="single_post_title"><%= @post.title %></h2>
  <% @post.body.split("\r\n").each do |p| %>
    <p><%= p %></p>
  <% end %>
  <p id="single_created_at">Posted on: <%= @post.posted_on %></p>
  <% if @post.tags.count > 0 %>
    <ul id="single_post_tags">
      <% @post.tags.each do |tag| %>
        <li><%= link_to tag.tag, tag_path(tag) %></li>
      <% end %>
    </ul>
  <% end %>
<% else %>
  <h2>Error</h2>
<% end %>