<!DOCTYPE html>
<html>
<head>

  <% if @title %>
    <title>DevSquirrel | <%= @title %></title>
  <% else %>
    <title>DevSquirrel</title>
  <% end %>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:900' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>

<% if @body_class %>
  <body class="<%= @body_class %>">
<% else %>
  <body class="home">
<% end %>

  <div class="container">
    <header>
      <h1><%= link_to "DevSquirrel", root_path, :class => "home_link" %></h1>

      <ul id="home_nav">
        <li><%= link_to "about",  about_path,   :class => "about_link" %></li>
        <li><%= link_to "blog",   posts_path,   :class => "blog_link" %></li>
        <li><%= link_to "dev",    dev_path,     :class => "dev_link" %></li>
        <li><%= link_to "haiku",  haikus_path,  :class => "haiku_link" %></li>
        <li><%= link_to "photo",  photos_path,  :class => "photo_link" %></li>
      </ul>

    </header>

    <div id="content">
      <%= yield %>
    </div>

    <footer>
      <% if current_user %>
        <p>You are logged in as <%= current_user.full_name %> | <%= link_to "Log Out", logout_path %></p>
      <% end %>
    </footer>
  </div>

</body>
</html>